<div class="col-md-9 offset-md-3">
      <h5 class = "ad_log_in">商品一覧 (全<%= @items.count %>件)</h5>
 <div class="row">
   
 <% @items.each do |item| %>
  <div class="card mb-4 shadow-sm">
 <%= link_to item_path(item.id)  do %>
  <%= image_tag item.image, size: "200x200" %>
 <% end %>
 
    <div class="card-body">
      <div class="btn-group">
        <%= link_to item.name,item_path(item.id)  %><br>
         <td><%= item.price %>円</td>
         
      </div>

    </div>
  </div>
  <% end %>

</div>
<%= paginate @items %>
