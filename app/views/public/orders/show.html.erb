<div class="container">
  <h5 class = "pbl">注文履歴詳細</h5>
  <div class="row">
    <div class="col-md-8">
      <strong>注文情報</strong>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td><%= @order.postal_code %><%= @order.address %><%= @order.name %></td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
        </thead>
      </table>
     </div>

    <div class="col-md-4">
      <% @total = 0 %>
      <strong>請求情報 </strong>
      <table border="3">
      <% @order_details.each do |order_detail| %>

      <tr>
        <th>商品合計 <%= order_detail.purchase_price * order_detail.amount %>円</th>
      </tr>
      <tr>
        <th>送料 <%= "800"  %>円</th>
      </tr>
      <tr>
        <th>請求金額 <%= order_detail.purchase_price * order_detail.amount + 800%>円</th>
      </tr>
      <% end %>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <strong>注文内容</strong>
      <table  border="3">
        <thead>
        
          <% @total = 0 %>
          <% @order_details.each do |order_detail| %>
           <tr>
           <th>商品名</th>
           <th>単価(税込)</th>
           <th>数量</th>
           <th>小計</th>
           </tr>
           <tbody>
           <tr>
           <td><%= order_detail.item.name %> </td>
           <td><%= order_detail.purchase_price %> </td>
           <th><%= order_detail.amount %> </th>
           <td><%= order_detail.purchase_price * order_detail.amount %> </td>
           </tr>
           </tbody>
            <% end %>
           <th colspan="3"></th>
          </tr>
        </thead>
        
      </table>
    </div>
    </div>
  </div>
