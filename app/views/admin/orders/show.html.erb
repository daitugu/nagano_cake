<div class="container">

     <h5 class = "pb">注文履歴詳細</h5>
<div class="row">
   <table>
  <thead>
    <tr>
       <th>購入者</th>
       <td><%= @order.name %></td>
    </tr>
    <tr>
       <th>注文日</th>
       <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
       <th>お届け先</th>
       <td><%= @order.postal_code %><%= @order.address %></td>
    </tr>
    <tr>
       <th>支払方法</th>
       <td><%= @order.payment_method_i18n %></td>
    </tr>

  </tbody>
  </table>
</div>
<div class="row">
<div class="col-md-8">
  <table class="table table-hover table-inverse">
  <thead>
    <tr>
       <th>商品名</th>
       <th>単価（税込）</th>
       <th>数量</th>
       <th>小計</th>
       <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @total = 0 %>
    <% @order_details.each do |order_detail| %>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.purchase_price %></td>
      <td><%= order_detail.amount %></td>
      <td><%= order_detail.purchase_price * order_detail.amount %></td>
    </tr>
    <% end %>
    </table>
</div>

<div class="col-md-4">
    <% @total = 0 %>
    <% @order_details.each do |order_detail| %>
     <table >
      <tr>
       <th>送料<%= "800"  %>円</th>
      </tr>
      <tr>
       <th>商品合計<%= order_detail.purchase_price * order_detail.amount %>円</th>
       </tr>
       <tr>
       <th>請求金額 <%= order_detail.purchase_price * order_detail.amount + 800%>円</th>
      </tr>
      <% end %>
      </table>
</div>
</div>
</div>

