<div class="col-md-5 offset-md-3">
     <h5 class = "pb_log_in">会員一覧</h5>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
       <th>会員ID</th>
       <th>氏名</th>
       <th>メールアドレス</th>
       <th>ステータス</th>
       <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
        <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to customer.full_name ,admin_customer_path(customer.id) %></td>
      <td><%= customer.email %></td>
      <td><% if customer.is_deleted == false %>
      <p class = "text-success">有効</p>
      <%  else %>
      <p class ="text-secondary">退会</p>
      <% end %>
      </td>
         </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
    </tr>
  </tfoot>
</table>
</div>
<%= paginate @customers %>