<div class="col-md-5 offset-md-3">
     <h5 class = "ad_log_in">注文履歴一覧</h5>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
       <th>購入日時</th>
       <th>購入者</th>
       <th>注文個数</th>
       <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
<% @orders.each do |order| %>
    <tr>
      <td>
        <%= link_to admin_orders_path(order.id)  do %>
        <%= order.created_at.strftime('%Y/%m/%d %H:%M') %></td>
        <% end %>
      <td><%= order.customer.full_name %></td>
      <td><%= order.order_details.sum(:amount) %></td>
    </tr>
     <% end %>
  </tbody>
  <tfoot>
    <tr>
    </tr>
  </tfoot>
</table>
</div>


