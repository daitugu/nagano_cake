<div class="container">
<div class="row">
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h5 class = "ad_log_in">管理者ログイン</h5>


<%= form_with(model: resource, scope: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field m-3",>
    <%= f.label :メールアドレス %>
    <%= f.email_field :email ,class:"form-control" , autofocus: true, autocomplete: "email"%>
  </div>
  <div class="field m-3">
    <%= f.label :パスワード %>
    <%= f.password_field :password, class:"form-control" ,autocomplete: "current-password"%>
  </div>



  <div class="actions m-3">
    <%= f.submit "ログイン", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>
