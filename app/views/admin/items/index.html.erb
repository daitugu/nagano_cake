<div class="col-md-5 offset-md-3">
     <h5 class = "pb_log_in">商品一覧</h5>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
       <th>商品ID</th>
       <th>商品名</th>
       <th>税抜価格</th>
       <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
        <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= item.name %></td>
      <td><%= item.price %>円</td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
    </tr>
  </tfoot>
</table>
</div>
<%= paginate @items %>