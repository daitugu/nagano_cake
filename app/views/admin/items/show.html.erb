<%= form_with model: @item, url: admin_item_path, method: :post do |f| %>
<div class="container">
<div class="row">
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
 
 <h5>商品画像</h5>
  <%= image_tag @item.image, size: "200x200" %>
 <h5>商品名</h5>
  <%= f.text_field :name %>
   <h5>商品説明</h5>
  <%= f.text_area :introduction %>
 <h5>税抜価格</h5>
  <%= f.text_field  :price %>円<br>

<% end %>


<%= link_to "編集する", edit_admin_item_path(@item.id),class: "btn btn-success" %>
<%= link_to "削除", admin_item_path(@item.id), method: :delete %>
